<div class="col-md-12">
  <div class="form-group" style="margin-bottom: -20px;">
    <h2 class="text-center"> My Applied Jobs </h2>
  </div>
  <table class="table table-boldered table-striped custab">
    <thead>
      <tr style="font-size: 15px;">
        <td>Status</td>
        <td>Job Title</td>
        <td>City</td>
        <td>Apply Content</td>
        <td>Apply Date</td>
      </tr>
    </thead>
    <tbody>
      <% @resumes.each do |resume| %>
        <tr>
          <!-- <td><%#= link_to(job.title, job_path(job)) %></td> -->
          <td>
            <%= t(resume.status, :scope => "resume.status") %>
          </td>
          <td>
            <%#= resume.title %>
            <%= resume.job.title %>
          </td>
          <td>
            <%= resume.location.city %>
          </td>
          <td>
            <%= resume.content %>
          </td>
          <td><%= resume.created_at %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
