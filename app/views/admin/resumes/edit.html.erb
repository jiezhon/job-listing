<div class="col-md-4 col-md-offset-4" style="margin: auto;">
  <div class="form-group" style="width: 500px;">
    <h3>Resume for <%= @job.title %></h3>
  </div>
  <hr>
  <div class="form-group" style="width: 1000px; ">
    <%= simple_form_for [:admin, @job, @resume] do |f| %>
      <%= f.input :name %>
      <%= f.input :email %>
      <%= f.input :cellphone %>
      <%= f.input :content, input_html: { class: "form-control"} %>
      <%= f.input :attachment %>

      <%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary" %>
      <%= link_to "Cancel", admin_job_resumes_path(@job), class: "btn btn-primary"%>
    <% end %>
  </div>
</div>
